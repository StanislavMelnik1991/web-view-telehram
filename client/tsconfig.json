{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "strict": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "paths": {
      "@hooks": ["./src/hooks/redux.ts"],
      "@reducers/*": ["./src/store/reducers/*"]
    }
    
  },
  "files": [
    "./src/index.tsx",
    "./module.d.ts"
  ],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "strict": true,
  "noImplicitAny": true
}
